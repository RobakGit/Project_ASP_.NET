@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}
<h1>Login</h1>
@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger" style="padding: 10px;">@error</h2>
}
<div class="d-flex flex-row">
    <img src="~/img/img1.jpg" style="width: 500px;" />
    <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post" style="margin: 100px 200px;">
        <div class="form-group">
            <label for="login">Login</label>
            <input class="form-control" type="text" name="login" placeholder="Podaj login" />
        </div>
        <div class="form-group">
            <label for="password">Hasło</label>
            <input class="form-control" type="password" name="password" placeholder="Podaj Hasło" />
        </div>
        <button class="btn btn-primary" type="submit">Zaloguj</button>
    </form>
</div>